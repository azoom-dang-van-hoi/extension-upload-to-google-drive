{
    "manifest_version": 2,
    "name": "Screenshot Extension",
    "version": "1.0",
    "description": "Chụp ảnh màn hình tab hiện tại",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "<all_urls>",
        "identity",
        "storage"
    ],
    "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "oauth2": {
        "client_id": "27268436054-o7u0v5t7aq7q8oo49a0p7p9nmj8tn5ie.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/drive.file"
        ]
    }
}